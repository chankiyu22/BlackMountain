drop table if exists userdb;
drop table if exists tweetdb;
drop table if exists groupdb;
drop table if exists groupmemberdb;

create table userdb (
	fullname varchar(50) not null,
	email varchar(80),
	username varchar(50) not null,
	password varchar(12),
	isgroup int
);

create table tweetdb(
	owner varchar(50) not null,
	message varchar(140) not null,
	date date
);

create table groupdb(
	id integer autoincrement,
	username varchar(50)
);

create table groupmemberdb(
	group_id integer,
	username varchar(50)
);

create table followerdb(
	follower varchar(50),
	following varchar(50)
);

create table hashtagdb(
	message varchar(20),
	freq integer,
	timestamp date
);

