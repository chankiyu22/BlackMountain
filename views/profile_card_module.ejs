<div align="center" class="profile-card module">
	<div class="profile-header">
	    <div>
	      <%= user.fullname %><small> @<%= user.username %></small>
	    </div>
    </div>
    <div class="account-stats">
    	<table border="1" cellspacing=0>
			<tr>
			<td><%= num_tweets %> tweets</td>
			<td><%= following.length %> following</td>
			<td><%= followers.length %> followers</td>
			</tr>
		</table>
		<div>
			<form action="/follow" method="post">
				<input type="hidden" name="tofollow" value="<%= user.username %>" />
				<input type="submit" value="Follow" />
			</form>
		</div>
	</div>
</div>