<div align="center" class="profile-card module">
	<div class="profile-header">
	    <div>
	      <%= profile.fullname %><small> @<%= profile.username %></small>
	    </div>
    </div>
    <div class="account-stats">
    	<table border="1" cellspacing=0>
			<tr>
			<td><%= num_tweets %> tweets</td>
			<td><%= following.length %> following</td>
			<td id="followers_tab"><%= followers.length %> followers</td>
			</tr>
		</table>
		<div style="padding-top: 5px;">
		<% if(!isFollowing) { %>
			<input class="join_btn" id="follow_btn" onclick="Profile.follow_user('<%= user.username %>', '<%= profile.username %>');" type="submit" value="Follow" />
		<% } else { %>
			<input class="join_btn" id="follow_btn" type="submit" value="Followed" disabled />
		<% } %>
		</div>
	</div>
</div>